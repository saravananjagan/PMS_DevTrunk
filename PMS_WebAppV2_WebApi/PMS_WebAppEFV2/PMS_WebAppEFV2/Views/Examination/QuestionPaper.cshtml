
@{
    ViewBag.Title = "QuestionPaper";
}

<div class="container-fluid">
	<input type="text" class="form-control form-control-lg text-center" placeholder="Subject Title"><br>
	<div class="row">
		<div class="col-8">
			<strong>Choose Part Type:</strong>&emsp;
			<label class="radio-inline"><input type="radio" name="optradio">MCQ</label>&emsp;
			<label class="radio-inline"><input type="radio" name="optradio">Objective without choice</label>&emsp;
			<label class="radio-inline"><input type="radio" name="optradio">Subjective</label> &emsp;
		</div>
		<div class="col-4">
			<button type="button" class="btn btn-outline-primary add-questions">Add Part</button>
		</div>
	</div><br>

	<div class="card border-primary">
		<div class="card-body">
			<div class="row">
				<div class="col-8">
					<input type="text" class="form-control form-control-lg" placeholder="Part Name">
				</div>
				<div class="col-4">
					<button type="button" class="btn btn-outline-danger add-questions">Remove Part</button>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-1">
					<button type="button" class="btn btn-outline-success question-remove"><i class="fa fa-plus"></i></button>
				</div>
				<div class="col-10">
					<input type="text" class="form-control" placeholder="MCQ Question No 1">
				</div>
				<div class="col-1">
					<button type="button" class="btn btn-outline-danger question-remove"><i class="fa fa-remove"></i></button>
				</div>
			</div><br>
			<div class="row">
				<div class="col-1">
					<button type="button" class="btn btn-outline-success question-remove"><i class="fa fa-plus"></i></button>
				</div>
				<div class="col-2">
					<input type="text" class="form-control" placeholder="Choice 1">
				</div>
				<div class="col-1">
					<button type="button" class="btn btn-outline-success question-remove"><i class="fa fa-plus"></i></button>
				</div>
				<div class="col-2">
					<input type="text" class="form-control" placeholder="Choice 2">
				</div>
				<div class="col-1">
					<button type="button" class="btn btn-outline-success question-remove"><i class="fa fa-plus"></i></button>
				</div>
				<div class="col-2">
					<input type="text" class="form-control" placeholder="Choice 3">
				</div>
				<div class="col-1">
					<button type="button" class="btn btn-outline-danger question-remove"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<br>
			<button type="button" class="btn btn-outline-success add-questions">Submit</button>
		</div>
	</div>
</div>

