
<form id="QuestionPaperDetailsForm">
    <div class="container-fluid">
        <div class="dropdown">
            <h4>
                Examination Type : <button type="button" type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" id="ExaminationTypeSelectedText">
                    --Please Select--
                </button>
                <input type="hidden" id="ExaminationTypeId" />
                <div class="dropdown-menu" id="ExaminationTypeDropDown">
                </div>
                <button type="button" type="button" class="btn btn-success" style="float:right" onclick="AddPart()">
                    Add part
                </button>
            </h4>
        </div>
    </div>
    <div class="container-fluid">
        <input type="text" class="form-control form-control-lg text-center" placeholder="Subject Title" id="SubjectName" name="SubjectName"><br>
        <div class="row">
            <div class="col-6">
                <input class="form-control left-aligned-small-input text-center" id="ExaminationDuration" type="text" placeholder="HH:MM" name="Time" disabled>
            </div>
            <div class="col-6">
                <input class="form-control right-aligned-small-input text-center" id="ExaminationTotalMarks" type="text" placeholder="Marks" name="Marks" disabled>
            </div>
        </div>
    </div><br />
</form>
<form id="QuestionPaperForm">
    <div class="container-fluid" id="PartsContainer">

    </div>
    <div class="container-fluid">
        <button type="button" class="btn btn-success round-btn" style="display:inline-block;float:right;" onclick="AddPart()"><i class="fa fa-plus"></i></button><p class="text-center" style="display:inline-block;float:right;">&nbsp;</p>
        <center><button type="button" class="btn btn-primary submit-questions" style="display:inline-block;" onclick="FormSubmit('QuestionPaperForm')">Submit Questions</button><p class="text-center" style="display:inline-block;">&nbsp;</p></center>
    </div>
</form>
<div class="container-fluid" style="display:none;">
    <div class="PartTemplate">
        <div class="card border-primary PartTemplate_Initial">
            <div class="card-body">
                <div class="alert partError" role="alert" style="display:none">
                </div>
                <input class="form-control left-aligned-small-round-input text-center" type="text" name="partOrdinal" placeholder="Pn">
                <button type="button" class="btn btn-danger right-position round-btn remove-part"><i class="fa fa-remove"></i></button>
                <br /><br />
                <div class="dropdown">
                    <h5>
                        Question Type : <button type="button" type="button" class="btn btn-outline-primary dropdown-toggle QuestionTypeSelectedText" data-toggle="dropdown">
                            --Please Select--
                        </button>
                        <div class="dropdown-menu" id="QuestionTypeDropdown">
                        </div>
                    </h5>
                </div>
                <div class="Questions">
                    <h3 class="card-title">
                        Part Name:
                        <input type="text" class="form-control" style="width:50%;display:inline-block;" placeholder="PartName" name="PartName">
                        <input type="hidden" class="QuestionType" name="QuestionTypeId" />
                        <input type="hidden" class="QuestionTypeText" name="QuestionType" />
                        <button type="button" class="btn btn-primary add-questions" style="display:inline-block;float:right;" onclick="AddQuestions()">Add Questions</button><p class="text-center" style="display:inline-block;float:right;">&nbsp;</p>
                        <input type="text" class="form-control TotalMarks" style="width:4%;display:inline-block;float:right;" placeholder="Q" name="TotalMarks" disabled><p class="text-center" style="width:3%;display:inline-block;float:right;">=</p>
                        <input type="text" class="form-control MarksPerQuestion" onkeyup="TotalMarksCalculation(this,'MarksPerQuestion')" style="width:4%;display:inline-block;float:right;" name="MarksPerQuestion" placeholder="m"><p class="text-center" style="width:3%;display:inline-block;float:right;">x</p>
                        <input type="text" class="form-control NumberOfQuestions" onkeyup="TotalMarksCalculation(this,'NumberOfQuestions')" style="width:4%;display:inline-block;float:right;" name="NumberOfQuestions" placeholder="N">
                    </h3>
                    <br>
                </div>
                <br />
                <div class="card-footer custom-footer">
                    <button type="button" class="btn btn-primary right-position round-btn add-questions" onclick="AddQuestions()"><i class="fa fa-plus"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="QuestionTemplate" class="container-fluid" style="display:none;">
    <div class="QuestionInputDiv">
        <input class="form-control left-aligned-small-round-input text-center" name="questionOrdinal" type="text" placeholder="Sn">&nbsp;
        <textarea class="form-control" rows="2" placeholder="Question" style="width:90%;display:inline-block;" name="Question"></textarea><button type="button" class="btn btn-danger remove-question" style="border-radius:50%;float:right;"><i class="fa fa-trash-o"></i></button>
        <br /><br />
    </div>
</div>
<div id="OptionTemplate" class="container-fluid" style="display:none;">
    <div class="OptionInputDiv">
        <div class="choice-div">
            <input class="form-control very-small-input text-center" name="choiceOrdinal" style="display:inline-block;" type="text" placeholder="C">&nbsp;
            <input type="text" class="form-control form-control-sm" placeholder="Choice" style="width:30%;display:inline-block;" name="choice">
            &nbsp;
            <button type="button" class="btn btn-danger remove-choice" style="border-radius:50%;"><i class="fa fa-remove"></i></button>
        </div>
        <button type="button" class="btn btn-success add-choice">Add Choice</button><br /><br />
    </div>
</div>
<script src="~/Scripts/QuestionPaperScripts.js"></script>