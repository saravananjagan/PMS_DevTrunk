<div class="container-fluid">
	<div class="dropdown">
		<h4>
			Examination Type : <button type="button" class="btn btn-outline-primary dropdown-toggle ExaminationTypeSelectedText" data-toggle="dropdown">
				--Please Select--
			</button>
			<div class="dropdown-menu" id="ExaminationTypeDropDown">
			</div>
			<button type="button" class="btn btn-success" style="float:right">
				Add part
			</button>
		</h4>
	</div>
</div>
<div class="container-fluid">
	<input type="text" class="form-control form-control-lg text-center" placeholder="Subject Title"><br>
	<div class="row">
		<div class="col-6">
			<input class="form-control left-aligned-small-input text-center" id="ExaminationDuration" type="text" placeholder="HH:MM" disabled>
		</div>
		<div class="col-6">
			<input class="form-control right-aligned-small-input text-center" id="ExaminationTotalMarks" type="text" placeholder="Marks" disabled>
		</div>
	</div>
</div><br />
<div class="container-fluid" id="PartsContainer">

</div>
<div class="container-fluid" id="PartTemplate" style="display:none;">
	<div class="card border-primary">
		<div class="card-body">
			<div class="dropdown">
				<h5>
					Question Type : <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown">
						--Please Select--
					</button>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="#">Normal</a>
						<a class="dropdown-item active" href="#">Active</a>
						<a class="dropdown-item disabled" href="#">Disabled</a>
					</div>
				</h5>
			</div>
			<h3 class="card-title">
				Part Name:
				<input type="text" class="form-control" style="width:50%;display:inline-block;" placeholder="PartName">
				<button class="btn btn-primary" style="display:inline-block;float:right;">Add Questions</button><p class="text-center" style="display:inline-block;float:right;">&nbsp;</p>
				<input type="text" class="form-control" style="width:4%;display:inline-block;float:right;" placeholder="M"><p class="text-center" style="width:3%;display:inline-block;float:right;">=</p>
				<input type="text" class="form-control" style="width:4%;display:inline-block;float:right;" placeholder="m"><p class="text-center" style="width:3%;display:inline-block;float:right;">x</p>
				<input type="text" class="form-control" style="width:4%;display:inline-block;float:right;" placeholder="Q">
			</h3>
			<br>
			<div class="card-footer custom-footer">
				<button class="btn btn-primary right-position round-btn"><i class="fa fa-plus"></i></button>
			</div>
		</div>
	</div>
</div>
<div id="QuestionTemplate" class="container-fluid" style="display:none;">
	<textarea class="form-control" rows="2" placeholder="Question" style="width:95%;display:inline-block;"></textarea><button class="btn btn-danger" style="border-radius:50%;float:right;"><i class="fa fa-trash-o"></i></button>
</div>
<div id="OptionTemplate" class="container-fluid" style="display:none;">
	<div class="choice-div">
		<input type="text" class="form-control form-control-sm" placeholder="Choice" style="width:30%;display:inline-block;">
		&nbsp;
		<button class="btn btn-danger" style="border-radius:50%;"><i class="fa fa-remove"></i></button>
	</div><br>
	<div class="add-choice">
		<button class="btn btn-success">Add Choice</button>
	</div>
</div>
<script src="~/Scripts/QuestionPaperScripts.js"></script>